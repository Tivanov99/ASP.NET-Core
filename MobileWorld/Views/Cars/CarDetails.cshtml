@using MobileWorld.Core.ViewModels.CarViewModels
@model CarAdViewModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link asp-append-version="true" rel="stylesheet" href="~/css/CarDetails.css">
    <link asp-append-version="true" rel="stylesheet" href="~/css/site.css">


    <title>Document</title>
</head>
<body>
    @if (Model.Car.Description != null)
    {
        <div class="more-info">Допълнителна информация:</div>
        <table class="table-more-info">
            <tbody>
                <tr><td class="more-info-text">@Model.Car.Description </td></tr>
            </tbody>
        </table>
    }

    <div class="contacts">За контакти:</div>
    <table style="width:360px;" cellspacing="0" cellpadding="0" border="0" bgcolor="#EFEFEF">
        <tbody>
            <tr>
                <td class="owner-info">
                    <span class="owner-phone">Телефон: 893668829</span><br><br>
                    <span class="owner-name">Име - @Model.Owner.Name</span>
                    <span class="owner-addres">Адрес :</span>
                    Регион: @Model.Region<br>гр. @Model.Town<br>
                    @if (Model.Neighborhood != null)
                    {
                        <span>КВ.@Model.Neighborhood</span>

                        <br>
                    }
                    <br>
                </td>
            </tr>
        </tbody>
    </table>

</body>
</html>