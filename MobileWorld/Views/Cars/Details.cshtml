@using MobileWorld.Core.ViewModels
@model CarDetailsViewModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link asp-append-version="true" rel="stylesheet" href="~/css/CarDetails.css">

    <title>Document</title>
</head>
<body>
    @if (Model.Description != null)
    {
        <div class="more-info">Допълнителна информация:</div>
        <table class="table-more-info">
            <tbody>
                <tr><td class="more-info-text">@Model.Description </td></tr>
            </tbody>
        </table>
    }

</body>
</html>