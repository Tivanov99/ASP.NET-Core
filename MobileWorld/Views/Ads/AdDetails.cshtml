@using MobileWorld.Core.Models;
@model AdViewModel;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link asp-append-version="true" rel="stylesheet" href="~/css/CarDetails.css">
    <link asp-append-version="true" rel="stylesheet" href="~/css/site.css">
    <link asp-append-version="true" rel="stylesheet" href="~/css/AdDetails.css">


    <title>Document</title>
</head>
<body>
    <h1>@Model.Title</h1>
    @if (Model.Description != null)
    {
        <div class="more-info">Допълнителна информация:</div>
        <table class="table-more-info">
            <tbody>
                <tr><td class="more-info-text">@Model.Description </td></tr>
            </tbody>
        </table>
    }

    <div class="contacts">За контакти:</div>
    <table style="width:360px;" cellspacing="0" cellpadding="0" border="0" bgcolor="#EFEFEF">
        <tbody>
            <tr>
                <td class="owner-info">
                    <span class="owner-phone">Телефон: @Model.Owner.PhoneNumber</span><br><br>
                    <span class="owner-name">Име - Trifon</span>
                    <span class="owner-addres">Адрес :</span>
                    Регион: @Model.Region.RegionName<br>гр. @Model.Region.Town.Name<br>
                    @if (Model.Region.Neiborhood != null)
                    {
                        <span>КВ.@Model.Region.Neiborhood</span>
                        <br>
                    }
                    <br>
                </td>
            </tr>
        </tbody>
    </table>
    <div style="width:400px; display:inline-block; float:left; margin-top:15px; overflow: hidden;">
        <strong style="font-size:18px;color:#333;">Land Rover Range Rover Sport 2.7d</strong><br>
        <div style="box-sizing: border-box"></div>
        <ul style="list-style: none; width: 400px; padding: 0;margin: 12px 0 0;" class="dilarData">
            <li class=".dilarData li:nth-of-type(odd)">Дата на производство</li>
            <li class=".dilarData li:nth-of-type(even)">декември 2006г.</li>
            <li class=".dilarData li:nth-of-type(odd)">Тип двигател</li>
            <li class=".dilarData li:nth-of-type(even)">@Model.Car.Engine.FuelType</li>
            <li class=".dilarData li:nth-of-type(odd)">Мощност</li>
            <li class=".dilarData li:nth-of-type(even)">@Model.Car.Engine.HorsePower к.с.</li>
            <li class=".dilarData li:nth-of-type(odd)">Евростандарт</li>
            <li class=".dilarData li:nth-of-type(even)">Евро @Model.Car.Engine.EcoLevel</li>
            <li class=".dilarData li:nth-of-type(odd)">Скоростна кутия</li>
            <li class=".dilarData li:nth-of-type(even)">@Model.Car.GearType</li>
            @*<li class=".dilarData li:nth-of-type(odd)">Категория</li>
                <li class=".dilarData li:nth-of-type(even)">Джип</li>*@
            <li class=".dilarData li:nth-of-type(odd)">Пробег</li>
            <li class=".dilarData li:nth-of-type(even)">@Model.Car.Mileage км</li>
            <li class=".dilarData li:nth-of-type(odd)">Цвят</li>
            <li class=".dilarData li:nth-of-type(even)">@Model.Car.Color.</li>
        </ul>
        <div class="clearfix" style="margin-bottom:11px;"></div>
        <div style="float:left; margin-top:10px;">
            <span style="color:#999999">Създадена на @Model.CreatedOn.</span><br>
        </div>
    </div>

</body>
</html>