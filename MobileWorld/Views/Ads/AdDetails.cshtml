@using MobileWorld.Core.Models;
@model AdViewModel;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link asp-append-version="true" rel="stylesheet" href="~/css/CarDetails.css">
    <link asp-append-version="true" rel="stylesheet" href="~/css/site.css">
    <link asp-append-version="true" rel="stylesheet" href="~/css/AdDetails.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <h1>@Model.Title</h1>
    @*//*@

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">

            @foreach (var bytes in @Model.Car.Images)
            {
                @await Html.PartialAsync("_CarImagePartial", bytes)
                ;
            }
            @*<div class="carousel-item active">
                <img class="d-block w-100" alt="First slide" src="data:image/jpeg;base64,@Convert.ToBase64String(@Model.Car.Images[0])" />
                </div>
                <div class="carousel-item active">
                <img class="d-block w-100" src="..." alt="Second slide">
                </div>
                <div class="carousel-item active">
                <img class="d-block w-100" src="..." alt="Third slide">
                </div>*@
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    @*//*@
    @if (Model.Description != null)
    {
        <div class="more-info">Допълнителна информация:</div>
        <table class="table-more-info">
            <tbody>
                <tr><td class="more-info-text">@Model.Description </td></tr>
            </tbody>
        </table>
    }

    <div class="contacts">За контакти:</div>
    <table style="width:360px;" cellspacing="0" cellpadding="0" border="0" bgcolor="#EFEFEF">
        <tbody>
            <tr>
                <td class="owner-info">
                    <span class="owner-phone">Телефон: @Model.Owner.PhoneNumber</span><br><br>
                    <span class="owner-name">Име - Trifon</span>
                    <span class="owner-addres">Адрес :</span>
                    Регион: @Model.Region.RegionName<br>гр. @Model.TownName<br>
                    @if (Model.Region.Neiborhood != null)
                    {
                        <span>КВ.@Model.Region.Neiborhood</span>
                        <br>
                    }
                    <br>
                </td>
            </tr>
        </tbody>
    </table>
    <div style="width:400px; display:inline-block; float:left; margin-top:15px; overflow: hidden;">
        <strong style="font-size:18px;color:#333;">Land Rover Range Rover Sport 2.7d</strong><br>
        <div style="box-sizing: border-box"></div>
        <ul style="list-style: none; width: 400px; padding: 0;margin: 12px 0 0;" class="dilarData">
            <li class=".dealerData li:nth-of-type(odd)">Дата на производство</li>
            <li class=".dealerData li:nth-of-type(even)">декември 2006г.</li>
            <li class=".dealerData li:nth-of-type(odd)">Тип двигател</li>
            <li class=".dealerData li:nth-of-type(even)">@Model.Car.Engine.FuelType</li>
            <li class=".dealerData li:nth-of-type(odd)">Мощност</li>
            <li class=".dealerData li:nth-of-type(even)">@Model.Car.Engine.HorsePower к.с.</li>
            <li class=".dealerData li:nth-of-type(odd)">Евростандарт</li>
            <li class=".dealerData li:nth-of-type(even)">Евро @Model.Car.Engine.EcoLevel</li>
            <li class=".dealerData li:nth-of-type(odd)">Скоростна кутия</li>
            <li class=".dealerData li:nth-of-type(even)">@Model.Car.GearType</li>
            @*<li class=".dealerData li:nth-of-type(odd)">Категория</li>
                <li class=".dilarData li:nth-of-type(even)">Джип</li>*@
            <li class=".dealerData li:nth-of-type(odd)">Пробег</li>
            <li class=".dealerData li:nth-of-type(even)">@Model.Car.Mileage км</li>
            <li class=".dealerData li:nth-of-type(odd)">Цвят</li>
            <li class=".dealerData li:nth-of-type(even)">@Model.Car.Color.</li>
        </ul>
        <div style="margin-bottom:11px;"></div>
        <div style="float:left; margin-top:10px;">
            <span style="color:#999999">Създадена на @Model.CreatedOn.</span><br>
        </div>
    </div>

</body>
</html>