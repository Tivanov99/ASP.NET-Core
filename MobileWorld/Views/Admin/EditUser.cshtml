@using MobileWorld.Core.Models
@using MobileWorld.Infrastructure.Data.Identity
@using Microsoft.AspNetCore.Identity
@using MobileWorld.Infrastructure.Data.Common
@model UserViewModel
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    string otherRole = Model.Role == "Base" ? "Administator" : "Base";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Редактиране на потребител</title>
    <link asp-append-version="true" rel="stylesheet" href="~/css/Users.css">
    <link asp-append-version="true" rel="stylesheet" href="~/css/EditUser.css">
</head>
<body>

    <from asp-action="UpdateUser" asp-route-userId=@Model.Id method="post" enctype="multipart/form-data">
        <strong>Име</strong>
        <input type="text" value="@Model.FirstName" />
        <br />
        <strong>Фамилия</strong>
        <input type="text" value="@Model.LastName" />
        <br />

        <strong>Потребителско име</strong>
        <input type="text" value="@Model.UserName" />
        <br />

        <strong>Имейл</strong>
        <input type="text" value="@Model.Email" />
        <br />

        <strong>Роли на текущият потребирел "@Model.UserName"</strong>
        <br />

        <select>
            <option value="">
                @Model.Role
            </option>
            <option value="">
               @otherRole
            </option>
        </select>


    </from>


    <div class="user-ads">
        <strong>Брой на обяви</strong>
        <label>@Model.AdsCount</label>
        <div>
            @foreach (var ad in Model.UserAds)
            {
                <label>@ad.Id</label>
                <a class="delete-border" asp-controller="Ad" asp-action="Delete" asp-route-adId="@ad.Id">Изтрий</a>
                <a class="edit-border" asp-controller="Ad" asp-action="Edit" asp-route-adId="@ad.Id">Редактирай</a>
            }
        </div>
    </div>

</body>
</html>